    <div class="card">
      <div class="card-header text-secondary text-center">
        <%= @contact.new_record? ? "新建信息" : "编辑信息" %>
      </div>
      <div class="card-body">
        <%= render partial: 'shared/errors', locals: { demo: @contact } %>
        <%= form_for(@contact,
                     url: (@contact.new_record? ? contacts_path : contact_path(@contact)),
                     method: (@contact.new_record? ? 'post' : 'put')) do |f| %>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary">名称:</label>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control", autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary">公司:</label>
          <div class="col-sm-10">
            <%= f.text_field :company, class: "form-control", autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary">邮箱:</label>
          <div class="col-sm-10">
            <%= f.text_field :email, class: "form-control", autofocus: true %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary">手机:</label>
          <div class="col-sm-10">
            <%= f.text_field :phone, class: "form-control", autofocus: true %>
          </div>
        </div> 

        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary">地址:</label>
          <div class="col-sm-10">
            <%= f.text_field :address, class: "form-control", autofocus: true %>
          </div>
        </div>
        
        <div class="form-group row">
          <label class="col-sm-2 col-form-label text-secondary">分类:</label>
          <div class="col-sm-10">
            <% attr = { prompt: "Select Group" } %>
            <% attr[:selected] = session[:selected_group_id].to_i if session[:selected_group_id] %>
            <%= f.collection_select :group_id, Group.all, :id, :name, attr, {class: "form-control" } %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label"></label>
          <div class="col-sm-10">
            <%= f.submit (@contact.new_record? ? "创建信息" : "更新信息"), class: "btn btn-primary btn-sm"%>
          </div>
        </div>
        
        <% end %>
      </div>
    </div>
